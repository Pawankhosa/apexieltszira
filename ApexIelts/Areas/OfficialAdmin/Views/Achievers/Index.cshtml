@model IEnumerable<AdminPaneNew.Areas.OfficialAdmin.Models.Achievers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/OfficialAdmin/Views/Shared/Layout.cshtml";
}
@section Pagename {

    Achievers

}
<h2><b>Index</b></h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Course)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reading)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Writing)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Listening)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Speaking)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Overall)
                </th>
                <th>Action</th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img src="~/UploadedFiles/@item.Image" width="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reading)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Writing)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Listening)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Speaking)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Overall)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Achieverid }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Achieverid }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Achieverid })
                    </td>
                </tr>
            }

    </table>
    </div>