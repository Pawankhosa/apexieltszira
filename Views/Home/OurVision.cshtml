@model AdminPaneNew.Areas.OfficialAdmin.Models.Pages
@using AdminPaneNew.Areas.OfficialAdmin.Models
@{
    ViewBag.Title = "OurVision";
    Layout = "~/Views/Shared/Layout.cshtml";
    dbcontext db = new dbcontext();
    var testi = db.Testimonials.ToList();

}

@section Keyword {
    <meta name="description" content="Template built for Business & Financial, Consulting, Accounting, Broker">
    <meta name="keywords" content="advisor, analytical, audit, broker, brokerage, business, company, Consultech, consulting, consulting psd, finance, financial, insurance, trader, trading">
}

@*BreadCrumb*@

<div id="featured-title" class="clearfix featured-title-left">
    <div id="featured-title-inner" class="container clearfix">
        <div class="featured-title-inner-wrap">
            <div id="breadcrumbs">
                <div class="breadcrumbs-inner">
                    <div class="breadcrumb-trail">
                        <a href="@Url.Action("Home")" title="Apex Ielts" rel="home" class="trail-begin">Home</a>
                        <span class="sep"><span class="fa fa-angle-right" aria-hidden="true"></span></span>
                        <span class="trail-end">Our Vision</span>
                    </div>
                </div>
            </div>
            <div class="featured-title-heading-wrap">
                <h1 class="featured-title-heading">Our Vision</h1>
            </div>
        </div>
    </div>
</div>

@*End BreadCrumb*@
<div class="container" style="padding:40px 0px">
    <div class="col-md-9">
        <div class="image-wrap">
            <img src="~/UploadedFiles/@Model.Image" alt="Image">
        </div>
        <div class="wprt-spacer clearfix" data-desktop="23" data-mobi="20" data-smobi="20"></div>
        <h3 class="heading font-size-24 margin-bottom-8">@Model.Name</h3>
        <div class="desc">
            <p class="margin-bottom-13">@Html.Raw(Model.Description)</p>

        </div>
        <div class="wprt-spacer clearfix" data-desktop="56" data-mobi="30" data-smobi="20"></div>

    </div>
    <div class="col-md-3">
        <nav class="wprt-navbar style-1">
            <ul class="menu">
                <li class="nav-item">
                    <a href="@Url.Action("CompanyOverview")">Company OverView</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("FounderMessage")">Founder Message</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("WhyChooseUs")">Why Choose Us</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("OurMission")">Our Mission</a>
                </li>
                <li class="nav-item current-nav-item">
                    <a href="@Url.Action("OurVision")">Our Vision</a>
                </li>
            </ul>
        </nav>
        <div class="wprt-spacer clearfix" data-desktop="35" data-mobi="20" data-smobi="20"></div>
        <iframe src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Fapexieltscentrezira%2F&tabs&width=250&height=180&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=true&appId=755281824540788" width="250" height="180" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allow="encrypted-media"></iframe><!-- /.wprt-carousel-box -->
        <div class="wprt-spacer clearfix" data-desktop="47" data-mobi="30" data-smobi="20"></div>
        <div class="wprt-carousel-box bullet-style-2 bullet-circle bullet0 has-bullets text-left" data-auto="false" data-loop="false" data-gap="10" data-column="1" data-column2="1" data-column3="1">
            <div class="owl-carousel owl-theme">
                @foreach (var nn in testi)
                {
                    <div class="wprt-testimonials style-4 clearfix ">
                        <blockquote class="text">
                            @Html.Raw(nn.Description)
                        </blockquote>
                        <div class="info">
                            <h6 class="name">@nn.Name</h6>
                            @*<span class="sep">|</span>
                    <span class="position">CEO CVTSoft</span>*@
                        </div>
                    </div><!-- /.wprt-testimonials -->
                }
            </div>
        </div>
        <div class="wprt-spacer clearfix" data-desktop="0" data-mobi="40" data-smobi="30"></div>
    </div>
</div>

